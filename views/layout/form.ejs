<form action="/update/<%= book.id %> ?_method=PUT" method="post">
  <input type="text" name="title" value="<%= book.title %>" placeholder="Book Title">
  <input type="text" name="authors" value="<%= book.authors %>" placeholder="author">
  <input type="text" name="description" value="<%= book.description %>" placeholder="description">
  <input type="text" name="bookshelf" value="<%= book.bookshelf %>" placeholder="bookshelf">
  <button id="hide">Submit</button>
</form>